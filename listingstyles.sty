\ProvidesPackage{listingstyles}[2011/11/09 v1.0 Configure custom listings styles]

\RequirePackage{listings}
\RequirePackage{caption}
\RequirePackage[usenames,svgnames]{xcolor}

\DeclareCaptionFont{white}{\color{DimGrey}}
\DeclareCaptionFormat{listing}{\colorbox[named]{Gainsboro}{\parbox{\textwidth}{\hspace{15pt}#1#2#3}}}
\captionsetup[lstlisting]{format=listing,labelfont=white,textfont=white, singlelinecheck=false, margin=0pt, font={bf,footnotesize}}

\lstdefinestyle{numbers} {
    basicstyle=\footnotesize\ttfamily,
    breaklines=true, 
    keywordstyle=\color{red},
    keywordstyle=[1]\color{DarkMagenta}\textbf,
    keywordstyle=[2]\color{MediumBlue},
    keywordstyle=[3]\color{MediumBlue},
    keywordstyle=[4]\color{MediumBlue},
    numbers=left, 
    stepnumber=1, 
    numberstyle=\tiny, 
    numbersep=5pt, 
    frame=b, 
    stringstyle=\color{Magenta}\ttfamily,
    xleftmargin=17pt, 
    framexrightmargin=5pt,
    framexbottommargin=4pt,
    showstringspaces=false,
    captionpos=t}
\lstdefinestyle{nonumbers}
{style=numbers,numbers=none}
\lstdefinestyle{Bash}
{language=Bash,style=nonumbers}
\lstdefinestyle{XML}
{language=Bash,style=numbers}
\lstdefinestyle{Java}
{language=Java,style=numbers}
\lstdefinestyle{R}
{language=R,style=numbers}

\definecolor{lstbackgroundcolor}{named}{AliceBlue}
\lstset{backgroundcolor=\color{lstbackgroundcolor}}
