\ProvidesPackage{colorhyper}[2010/08/15 v1.0 Makes the hyperlinks in a defined color.]

\RequirePackage{hyperref}
\RequirePackage{color}

% define the color of the hyperlink
\definecolor{hyperlinkcolor}{rgb}{0,0,.6}

\hypersetup{colorlinks=true, breaklinks=true, linkcolor=hyperlinkcolor,
menucolor=hyperlinkcolor, pagecolor=hyperlinkcolor, urlcolor=hyperlinkcolor,
citecolor=hyperlinkcolor}
