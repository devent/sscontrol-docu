\ProvidesPackage{simpletitle}

% makes a 3 lines title
% 1. line is the name of the document;
% 2. line is the author;
% 3. line is the date
% 
% example:
% \newcommand{\email}{myemail@foobar.com}
% \title{The \textsf{Foobar} Project}
% \author{\mbox{Copyright 2010, Erwin Mueller \textless\email\textgreater}}
% \date{2010/02/20\enspace\enspace Version 1.0}

\renewcommand{\maketitle}{
        \begin{center}
        \huge \@title \par
        \vskip 0.2cm
        \normalsize \@author \par
        \vskip -0.1cm
        \normalsize \@date
        \vskip 6cm
        \end{center}
    \setcounter{footnote}{0}%
}
